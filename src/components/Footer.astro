---
import siteData from '../data/site.json';
const { footer, company, branding, socialProof } = siteData;
---

<footer class="bg-slate-900 text-white">
  <!-- Quote CTA Banner -->
  <div class="bg-accent-600 py-4">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 text-center">
        <span class="text-lg font-bold">Need Bulk Pricing? Contact Our Sales Team</span>
        <a 
          href="/contact"
          class="inline-flex items-center gap-2 px-6 py-2 bg-white text-accent-700 font-bold rounded-lg hover:bg-slate-100 transition-colors"
        >
          Request a Quote
        </a>
      </div>
    </div>
  </div>

  <!-- Main Footer -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-12">
      <!-- Brand Column -->
      <div class="lg:col-span-2">
        <a href="/" class="flex items-center gap-3 mb-6">
          {branding?.logo?.startsWith('http') ? (
            <img 
              src={branding.logo} 
              alt={company.name}
              class="h-10 w-auto object-contain"
              onerror="this.style.display='none'"
            />
          ) : branding?.logo ? (
            <img 
              src={branding.logo} 
              alt={company.name}
              class="h-10 w-auto brightness-0 invert"
            />
          ) : null}
          <span class="font-display text-xl font-bold text-white">
            {company.name}
          </span>
        </a>
        <p class="text-slate-400 text-sm leading-relaxed max-w-sm mb-6">
          {company.tagline}
        </p>
        
        <!-- Contact Info -->
        <div class="space-y-3 text-sm">
          {company.address && (
            <div class="flex items-start gap-3 text-slate-400">
              <svg class="w-5 h-5 mt-0.5 flex-shrink-0 text-brand-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
              </svg>
              <span>
                {company.address?.street && <>{company.address.street}<br /></>}
                {(company.address?.city || company.address?.state || company.address?.zip) && (
                  <>{company.address?.city}, {company.address?.state} {company.address?.zip}</>
                )}
              </span>
            </div>
          )}
          {company.phone && (
            <div class="flex items-center gap-3 text-slate-400">
              <svg class="w-5 h-5 flex-shrink-0 text-brand-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
              </svg>
              <a href={`tel:${company.phone?.replace(/[^0-9+]/g, '')}`} class="hover:text-white transition-colors">
                {company.phone}
              </a>
            </div>
          )}
          {company.email && (
            <div class="flex items-center gap-3 text-slate-400">
              <svg class="w-5 h-5 flex-shrink-0 text-brand-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
              </svg>
              <a href={`mailto:${company.email}`} class="hover:text-white transition-colors">
                {company.email}
              </a>
            </div>
          )}
        </div>
      </div>
      
      <!-- Footer Columns -->
      {footer?.columns?.map((column) => (
        <div>
          <h3 class="font-display text-sm font-bold uppercase tracking-wider text-white mb-4">
            {column.title}
          </h3>
          <ul class="space-y-3">
            {column.links.map((link) => (
              <li>
                <a href={link.href} class="text-slate-400 text-sm hover:text-white transition-colors">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
  
  <!-- Bottom Bar -->
  <div class="border-t border-slate-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <p class="text-slate-500 text-sm text-center md:text-left">
          {footer?.copyright}
        </p>
        
        <!-- Social Links -->
        {footer?.socialLinks && (
          <div class="flex items-center gap-4">
            {footer.socialLinks.linkedin && (
              <a href={footer.socialLinks.linkedin} target="_blank" rel="noopener noreferrer" class="text-slate-500 hover:text-white transition-colors">
                <span class="sr-only">LinkedIn</span>
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                </svg>
              </a>
            )}
            {footer.socialLinks.facebook && (
              <a href={footer.socialLinks.facebook} target="_blank" rel="noopener noreferrer" class="text-slate-500 hover:text-white transition-colors">
                <span class="sr-only">Facebook</span>
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"/>
                </svg>
              </a>
            )}
          </div>
        )}
      </div>
    </div>
  </div>
</footer>
