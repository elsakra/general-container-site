---
import siteData from '../data/site.json';
const { navigation, company, branding } = siteData;
const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 bg-white shadow-md">
  <!-- Top Red Bar - Prominent CTAs -->
  <div class="bg-accent-600">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-14">
        <!-- Logo in red bar -->
        <a href="/" class="flex items-center gap-2">
          <img src={branding.logo} alt={company.name} class="h-10 w-auto brightness-0 invert" />
          <span class="font-display text-lg font-bold text-white hidden sm:block">
            {company.name}
          </span>
        </a>
        
        <!-- Dual CTAs -->
        <div class="flex items-center gap-3">
          <a 
            href="/contact"
            class="hidden sm:inline-flex items-center gap-2 px-5 py-2 bg-brand-800 text-white text-sm font-bold rounded hover:bg-brand-900 transition-colors"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            Book Online
          </a>
          <a 
            href={`tel:${company.phone?.replace(/[^0-9+]/g, '')}`}
            class="inline-flex items-center gap-2 px-5 py-2 bg-brand-800 text-white text-sm font-bold rounded hover:bg-brand-900 transition-colors"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
            </svg>
            Call Us
          </a>
          
          <!-- Mobile Menu Button -->
          <button 
            type="button"
            class="lg:hidden p-2 text-white hover:bg-accent-700 rounded"
            aria-label="Open menu"
            id="mobile-menu-button"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" id="menu-icon-open">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
            <svg class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" id="menu-icon-close">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Location Finder Bar -->
  <div class="bg-accent-700 border-t border-accent-500">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-center gap-2 h-10 text-white text-sm">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
        </svg>
        <span class="font-semibold">{company.serviceArea || 'Find Your Local Service Area'}</span>
      </div>
    </div>
  </div>

  <!-- Desktop Navigation -->
  <nav class="hidden lg:block bg-white border-b border-slate-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-center gap-8 h-12">
        {navigation.items.map((item) => (
          <a 
            href={item.href}
            class:list={[
              "text-sm font-semibold uppercase tracking-wide transition-colors hover:text-accent-600",
              currentPath === item.href ? "text-accent-600" : "text-slate-700"
            ]}
          >
            {item.label}
          </a>
        ))}
      </div>
    </div>
  </nav>
    
  <!-- Mobile Navigation Menu -->
  <div class="lg:hidden hidden bg-white border-t border-slate-200" id="mobile-menu">
    <div class="max-w-7xl mx-auto px-4 py-4 space-y-1">
      {navigation.items.map((item) => (
        <a 
          href={item.href}
          class:list={[
            "block py-3 px-4 text-base font-semibold rounded-lg transition-colors",
            currentPath === item.href 
              ? "bg-accent-50 text-accent-700" 
              : "text-slate-700 hover:bg-slate-50"
          ]}
        >
          {item.label}
        </a>
      ))}
      
      <div class="pt-4 border-t border-slate-100 mt-4 space-y-3">
        <a 
          href="/contact"
          class="block w-full text-center py-3 bg-brand-700 text-white font-bold rounded-lg hover:bg-brand-800 transition-colors"
        >
          Book Online
        </a>
        <a 
          href={`tel:${company.phone?.replace(/[^0-9+]/g, '')}`}
          class="block w-full text-center py-3 bg-accent-600 text-white font-bold rounded-lg hover:bg-accent-700 transition-colors"
        >
          Call {company.phone}
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIconOpen = document.getElementById('menu-icon-open');
  const menuIconClose = document.getElementById('menu-icon-close');
  
  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    menuIconOpen?.classList.toggle('hidden');
    menuIconClose?.classList.toggle('hidden');
  });
</script>
