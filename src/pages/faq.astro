---
import BaseLayout from '@/layouts/BaseLayout.astro';
import siteData from '@/data/site.json';
import { getCollection } from 'astro:content';

const faqItems = await getCollection('faq');
const { company } = siteData;
---

<BaseLayout title={`FAQ - ${company.name}`}>
  <!-- Hero Section -->
  <section class="py-24 bg-gradient-to-b from-sage-50 to-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="font-display text-4xl md:text-5xl font-bold text-sage-900 mb-6">
        Frequently Asked Questions
      </h1>
      <p class="text-xl text-earth-600">
        Find answers to common questions about our services, appointments, and policies.
      </p>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      {faqItems.length > 0 ? (
        <div class="space-y-6">
          {faqItems.map(async (faq, index) => {
            const { Content } = await faq.render();
            return (
              <details 
                class="group bg-sage-50 rounded-2xl overflow-hidden"
                open={index === 0}
              >
                <summary class="flex items-center justify-between p-6 cursor-pointer list-none hover:bg-sage-100 transition-colors">
                  <h3 class="font-display text-lg font-semibold text-sage-900 pr-8">
                    {faq.data.question}
                  </h3>
                  <svg 
                    class="w-5 h-5 text-sage-600 flex-shrink-0 transition-transform group-open:rotate-180" 
                    fill="none" 
                    stroke="currentColor" 
                    viewBox="0 0 24 24"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                  </svg>
                </summary>
                <div class="px-6 pb-6 prose prose-sage max-w-none">
                  <Content />
                </div>
              </details>
            );
          })}
        </div>
      ) : (
        <div class="text-center py-16">
          <p class="text-earth-500">No FAQs available at this time.</p>
        </div>
      )}
    </div>
  </section>

  <!-- Still Have Questions -->
  <section class="py-20 bg-sage-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display text-3xl font-bold text-sage-900 mb-4">
        Still Have Questions?
      </h2>
      <p class="text-earth-600 mb-8 max-w-2xl mx-auto">
        Our team is here to help. Don't hesitate to reach out with any questions or concerns.
      </p>
      <a 
        href="/contact" 
        class="inline-flex items-center gap-2 bg-sage-600 hover:bg-sage-700 text-white px-8 py-4 rounded-full font-semibold transition-colors"
      >
        Contact Us
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
    </div>
  </section>
</BaseLayout>
