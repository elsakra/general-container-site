---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Button from '../../components/Button.astro';
import siteData from '../../data/site.json';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  let products = [];
  try {
    products = await getCollection('products');
  } catch (e) {}
  
  return products.map((product) => ({
    params: { slug: product.slug },
    props: { product },
  }));
}

const { product } = Astro.props;
const { Content } = await product.render();
const { company } = siteData;
---

<BaseLayout title={product.data.title}>
  <!-- Hero -->
  <section class="pt-32 pb-8 bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <a 
        href="/products"
        class="inline-flex items-center gap-2 text-slate-400 hover:text-white transition-colors mb-6"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to Products
      </a>
      <h1 class="text-4xl sm:text-5xl font-display font-bold text-white">
        {product.data.title}
      </h1>
      {product.data.shortDescription && (
        <p class="mt-4 text-xl text-slate-300">
          {product.data.shortDescription}
        </p>
      )}
    </div>
  </section>

  <!-- Product Details -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Image -->
        <div>
          {product.data.image ? (
            <div class="aspect-square rounded-xl overflow-hidden bg-slate-100">
              <img 
                src={product.data.image}
                alt={product.data.title}
                class="w-full h-full object-cover"
              />
            </div>
          ) : (
            <div class="aspect-square rounded-xl bg-brand-100 flex items-center justify-center">
              <svg class="w-32 h-32 text-brand-300" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
              </svg>
            </div>
          )}
        </div>
        
        <!-- Details -->
        <div>
          {product.data.category && (
            <span class="inline-block px-3 py-1 bg-brand-100 text-brand-700 text-sm font-medium rounded-full mb-4">
              {product.data.category}
            </span>
          )}
          
          {product.data.features && product.data.features.length > 0 && (
            <div class="mb-8">
              <h2 class="text-lg font-bold text-slate-900 mb-4">Features</h2>
              <ul class="space-y-2">
                {product.data.features.map((feature) => (
                  <li class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-brand-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                    <span class="text-slate-600">{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}
          
          {product.data.specifications && product.data.specifications.length > 0 && (
            <div class="mb-8">
              <h2 class="text-lg font-bold text-slate-900 mb-4">Specifications</h2>
              <div class="border border-slate-200 rounded-lg overflow-hidden">
                {product.data.specifications.map((spec, i) => (
                  <div class={`flex justify-between p-3 ${i % 2 === 0 ? 'bg-slate-50' : 'bg-white'}`}>
                    <span class="text-slate-600">{spec.label}</span>
                    <span class="text-slate-900 font-medium">{spec.value}</span>
                  </div>
                ))}
              </div>
            </div>
          )}
          
          <!-- CTA -->
          <div class="bg-slate-50 rounded-xl p-6">
            <h3 class="text-lg font-bold text-slate-900 mb-2">Ready to Order?</h3>
            <p class="text-slate-600 mb-4">
              Contact us for pricing, availability, and volume discounts.
            </p>
            <div class="flex flex-col sm:flex-row gap-3">
              <Button href="/contact" style="primary">
                Request Quote
              </Button>
              <a 
                href={`tel:${company.phone?.replace(/[^0-9+]/g, '')}`}
                class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-white text-slate-700 font-bold rounded-lg border border-slate-300 hover:border-brand-600 hover:text-brand-700 transition-colors"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                </svg>
                Call {company.phone}
              </a>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Full Description -->
      <div class="mt-12 prose prose-slate max-w-none">
        <Content />
      </div>
    </div>
  </section>
</BaseLayout>
