---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';
import siteData from '../data/site.json';

const { sections, company } = siteData;
---

<BaseLayout title="Contact Us">
  <!-- Hero -->
  <section class="pt-32 pb-16 bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-display font-bold text-white">
          {sections.contact?.headline || "Request a Quote"}
        </h1>
        {sections.contact?.description && (
          <p class="mt-6 text-xl text-slate-300 leading-relaxed">
            {sections.contact.description}
          </p>
        )}
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-16 lg:py-24 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16">
        <!-- Contact Form -->
        <div class="bg-white rounded-xl p-8 lg:p-10 shadow-sm border border-slate-200">
          <h2 class="text-2xl font-display font-bold text-slate-900 mb-6">
            Get a Quote
          </h2>
          
          <form class="space-y-6" action="#" method="POST">
            <div class="grid sm:grid-cols-2 gap-6">
              <div>
                <label for="firstName" class="block text-sm font-medium text-slate-700 mb-2">
                  First Name
                </label>
                <input 
                  type="text" 
                  id="firstName" 
                  name="firstName"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:border-brand-500 focus:ring-2 focus:ring-brand-200 outline-none transition-colors"
                />
              </div>
              <div>
                <label for="lastName" class="block text-sm font-medium text-slate-700 mb-2">
                  Last Name
                </label>
                <input 
                  type="text" 
                  id="lastName" 
                  name="lastName"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:border-brand-500 focus:ring-2 focus:ring-brand-200 outline-none transition-colors"
                />
              </div>
            </div>
            
            <div>
              <label for="company" class="block text-sm font-medium text-slate-700 mb-2">
                Company Name
              </label>
              <input 
                type="text" 
                id="company" 
                name="company"
                class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:border-brand-500 focus:ring-2 focus:ring-brand-200 outline-none transition-colors"
              />
            </div>
            
            <div class="grid sm:grid-cols-2 gap-6">
              <div>
                <label for="email" class="block text-sm font-medium text-slate-700 mb-2">
                  Email Address
                </label>
                <input 
                  type="email" 
                  id="email" 
                  name="email"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:border-brand-500 focus:ring-2 focus:ring-brand-200 outline-none transition-colors"
                />
              </div>
              <div>
                <label for="phone" class="block text-sm font-medium text-slate-700 mb-2">
                  Phone Number
                </label>
                <input 
                  type="tel" 
                  id="phone" 
                  name="phone"
                  class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:border-brand-500 focus:ring-2 focus:ring-brand-200 outline-none transition-colors"
                />
              </div>
            </div>
            
            <div>
              <label for="productType" class="block text-sm font-medium text-slate-700 mb-2">
                Product Category
              </label>
              <select 
                id="productType" 
                name="productType"
                class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:border-brand-500 focus:ring-2 focus:ring-brand-200 outline-none transition-colors bg-white"
              >
                <option value="">Select a category</option>
                <option value="steel-drums">Steel Drums</option>
                <option value="plastic-containers">Plastic Containers</option>
                <option value="ibcs">IBCs & Totes</option>
                <option value="pails">Pails & Cans</option>
                <option value="fiber-drums">Fiber Drums</option>
                <option value="accessories">Accessories</option>
                <option value="other">Other / Multiple Categories</option>
              </select>
            </div>
            
            <div>
              <label for="quantity" class="block text-sm font-medium text-slate-700 mb-2">
                Estimated Quantity
              </label>
              <input 
                type="text" 
                id="quantity" 
                name="quantity"
                placeholder="e.g., 100 drums, 50 IBCs"
                class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:border-brand-500 focus:ring-2 focus:ring-brand-200 outline-none transition-colors"
              />
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-slate-700 mb-2">
                Additional Details
              </label>
              <textarea 
                id="message" 
                name="message"
                rows="4"
                class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:border-brand-500 focus:ring-2 focus:ring-brand-200 outline-none transition-colors resize-none"
                placeholder="Tell us about your specific requirements, timeline, etc."
              ></textarea>
            </div>
            
            <Button style="primary" size="lg" class="w-full">
              Submit Quote Request
            </Button>
          </form>
        </div>
        
        <!-- Contact Info -->
        <div class="lg:pt-8">
          <h2 class="text-2xl font-display font-bold text-slate-900 mb-8">
            Contact Information
          </h2>
          
          <div class="space-y-6">
            {company.phone && (
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-12 h-12 bg-brand-100 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-brand-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-bold text-slate-900">Sales</h3>
                  <a href={`tel:${company.phone?.replace(/[^0-9+]/g, '')}`} class="text-slate-600 hover:text-brand-700 transition-colors">
                    {company.phone}
                  </a>
                </div>
              </div>
            )}
            
            {company.email && (
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-12 h-12 bg-brand-100 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-brand-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-bold text-slate-900">Email</h3>
                  <a href={`mailto:${company.email}`} class="text-slate-600 hover:text-brand-700 transition-colors">
                    {company.email}
                  </a>
                </div>
              </div>
            )}
            
            {company.address && (
              <div id="hours" class="flex gap-4">
                <div class="flex-shrink-0 w-12 h-12 bg-brand-100 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-brand-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-bold text-slate-900">Location</h3>
                  <address class="text-slate-600 not-italic">
                    {typeof company.address === 'string' ? (
                      <p>{company.address}</p>
                    ) : (
                      <>
                        {company.address?.street && <p>{company.address.street}</p>}
                        {(company.address?.city || company.address?.state || company.address?.zip) && (
                          <p>
                            {company.address?.city}{company.address?.city && company.address?.state ? ', ' : ''}
                            {company.address?.state} {company.address?.zip}
                          </p>
                        )}
                      </>
                    )}
                  </address>
                </div>
              </div>
            )}
            
            {company.hours && (
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-12 h-12 bg-brand-100 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-brand-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-bold text-slate-900">Business Hours</h3>
                  <div class="text-slate-600 text-sm space-y-1">
                    {typeof company.hours === 'string' ? (
                      <p>{company.hours}</p>
                    ) : (
                      <>
                        {company.hours.monday && <p>Mon: {company.hours.monday}</p>}
                        {company.hours.tuesday && <p>Tue: {company.hours.tuesday}</p>}
                        {company.hours.wednesday && <p>Wed: {company.hours.wednesday}</p>}
                        {company.hours.thursday && <p>Thu: {company.hours.thursday}</p>}
                        {company.hours.friday && <p>Fri: {company.hours.friday}</p>}
                        {company.hours.saturday && <p>Sat: {company.hours.saturday}</p>}
                        {company.hours.sunday && <p>Sun: {company.hours.sunday}</p>}
                      </>
                    )}
                  </div>
                </div>
              </div>
            )}
          </div>
          
          <!-- Additional Info Box -->
          <div class="mt-10 bg-brand-50 rounded-xl p-6 border border-brand-100">
            <h3 class="text-lg font-bold text-slate-900 mb-2">
              Volume Discounts Available
            </h3>
            <p class="text-slate-600">
              We offer competitive pricing on bulk orders. Contact our sales team for a custom quote based on your specific requirements and volume needs.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
